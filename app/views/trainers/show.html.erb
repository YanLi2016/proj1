<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h1>Pokemons:</h1>
	<%= "No Pokemon" if @trainer.pokemon.size == 0 %>
    <%= button_to "Create!", new_pokemon_path(), :class => "button medium", :method => :get if @trainer.id == current_trainer.id%>
    <ul>
        <% @trainer.pokemon.each do |pokemon| %>
            <%if @trainer.id == current_trainer.id or pokemon.health > 0 %>
                <li>Name: <%= pokemon.name %></li>
                <li>Level: <%= pokemon.level %></li>
                <li>Health: <%= pokemon.health %></li>
                <li><%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %></li>
                <li><%= button_to "Heal!", heal_path(id: pokemon), :class => "button medium", :method => :patch %></li>
            <% end %>
        <% end %>
    </ul>
